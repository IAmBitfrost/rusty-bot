{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true, 
      {
        "limit": 140, 
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ],
    "no-console": false
  },
  "rulesDirectory": []
}